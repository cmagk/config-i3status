general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "ethernet _first_"
order += "memory"
order += "tztime local"

cpu_usage {
        format= "CPU %usage"
        max_threshold= 75
}

cpu_temperature 0 {
    format = "%degrees Â°C"
    path = /sys/class/thermal/thermal_zone3/temp
}

ethernet _first_ {
        format_up = "E %ip (%speed)"
        format_down = ""
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

memory {
        format = "MEM %used (%percentage_used) | Total %total "
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

